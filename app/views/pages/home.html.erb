<div class="homepage">
  <div class="container">
    <div class="row">
      <div class="homepage-heading">
        What are you looking for? <br>
        Find it here.
        <p>Browse. Search. Buy. Done.</p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <form>
          <div class="input-group input-group-lg">
            <input type="text" class='form-control' placeholder='What are you looking for...?'>
            <span class='input-group-btn'>
              <button class="btn btn-default" type='button'>Find Product</button>
            </span>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="container section">
  <h1>New Products</h1>
  <div class="row">
    <div class="col-md-3">
      <div class="product-listing">
        <%= image_tag 'laptop.jpg' %>
        <h4>Connect people to the world</h4>
        <h3>$30</h3>
      </div>
    </div>
  </div>
</div>
