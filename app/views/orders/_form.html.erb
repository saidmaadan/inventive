<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for([@product, @product.orders.new]) do |f| %>
      <%= f.hidden_field :product_id, value: @product.id %>
      <%= f.hidden_field :price, value: @product.price %>
      <%= f.hidden_field :total_price, value: @product.price %>
      <center>
        <%= f.submit "Order Now ($#{@product.price})", class: "btn btn-primary btn-lg btn-order"%>
      </center>
      <hr>
      <h5 class='pull-left'>Product Quantity</h5>
      <div class="form-group pull-right">
        <div class="select-control">
          <%= f.select(:quantity, options_for_select([["1 ($#{@product.price * 1})", 1], ["2 ($#{@product.price * 2})", 2], ["3 ($#{@product.price * 3})", 3], ["4 ($#{@product.price * 4})", 4]]), {id: "quantity"})%>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $("select").bind("change", function(){
      $(".btn-order").val("Order now -" + $("select option:selected").html());
    });
  })
</script>
