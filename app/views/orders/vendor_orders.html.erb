<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <center>
          <%= image_tag get_avatar_url(current_vendor), class: "img-circle img-responsive" %>
          <h3><%= product_vendor.fullname %></h3>
        </center>
      </div>
      <div class="panel-body">
        <%= product_vendor.description %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>My Orders</h3>
      </div>
      <div class="panel-body">
        <% @orders.each do |order| %>
          <div class="row">
            <div class="col-md-2">
              <%= link_to product_path(order.product) do %>
              <%= image_tag order.product.image.url(:thumb) %>
              <% end %>
            </div>
            <div class="col-md-3">
              <%= link_to product_path(order.product) do %>
              <%= order.product.title %>
              <% end %>
            </div>
            <div class="col-md-2">
              <h5>
                Quantity: <%= order.quantity %> <br>
                Price: <%= order.price %>
              </h5>
            </div>
            <div class="col-md-2">
              <%= order.created_at.strftime('%b, %d, %Y') %>
            </div>
            <div class="col-md-2">
              <h5><%= Total Price: $<%= order.total_price %> %></h5>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
