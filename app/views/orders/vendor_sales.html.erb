<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>My Sales</h3>
      </div>
      <div class="panel-body">
        <% @products.each do |product| %>
          <% product.orders.each do |order| %>
            <div class="row">
              <div class="col-md-2">
                <%= link_to product_path(order.product) do %>
                <%= image_tag order.product.image.url(:thumb) %>
                <% end %>
              </div>
              <div class="col-md-3">
                <%= link_to product_path(order.product) do %>
                <%= order.product.title %>
                <% end %>
              </div>
              <div class="col-md-2">
                <h5>
                  Quantity: <%= order.quantity %> <br>
                  Price: <%= order.price %>
                </h5>
              </div>
              <div class="col-md-2">
                <span><%= image_tag get_avatar_url(order.vendor), class: "image-circle navbar-avatar" %></span>
                <h5><%= order.vendor.fullname %></h5>
              </div>
              <div class="col-md-2">
                <%= order.created_at.strftime('%b, %d, %Y') %>
              </div>
              <div class="col-md-2">
                <h5>Total: $<%= order.total_price %> %></h5>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
