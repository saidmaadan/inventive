<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <center>
          <%= image_tag get_avatar_url(current_vendor), class: "img-circle img-responsive" %>
          <h3><%= current_vendor.fullname %></h3>
        </center>
      </div>
      <div class="panel-body">
        <%= current_vendor.description %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>my Store Front</h3>
      </div>
      <div class="panel-body">
        <% @products.each do |product| %>
          <div class="row">
            <div class="col-md-2">
              <%= image_tag product.image.url(:thumb) %>
            </div>
            <div class="col-md-7">
              <h4><%= product.title %></h4>
            </div>
            <div class="col-md-3">
              <h4><%= link_to "Update", edit_product_path(product), class: "btn btn-default pull-right" %></h4>
            </div>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
