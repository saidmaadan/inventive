
<div class="panel panel-default">
  <div class="panel-heading">
    <h2><%= @product.new_record? ? "Add Your Product" : "Update Your Product" %></h2>
  </div>
  <div class="panel-body">
    <%= form_for @product do |f| %>
      <% if @product.errors.any? %>
        <div class="alert alert-info">
          <h3>
            Fix the following <%= pluralize(@product.errors.count, "error") %> before continuing:
          </h3>
          <ul>
            <% @product.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="panel-body">
    <%= form_for @product do |f| %>
      <div class="form-group">
        <label>Title</label>
        <%= f.text_area :title, placeholder: "Check out my new project", rows: '2', class: "form-control"%>
      </div>
      <div class="form-group">
        <label>Description</label>
        <%= f.text_area :description, rows: '5', class: "form-control"%>
      </div>

      <div class="row">
        <div class="col-md-3">
          <div class="form-group">
            <label>Pricing</label>
            <div class="select-control">
              <%= f.select :price, [["$6", "6"], ["$12", "12"], ["$18", "18"], ["$24", "24"]], class:"form-control" %>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <label>Delivery Time</label>
            <div class="select-control">
              <%= f.select :delivery_time, [["1 Day", "1"], ["2 Days", "2"], ["3 Days", "3"], ["4 Days", "4"]], class:"form-control" %>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <label>Included Revisions</label>
            <div class="select-control">
              <%= f.select :delivery_time, [["0", "0"], ["1", "1"], ["2", "2"], ["3", "3"]], class:"form-control" %>
            </div>
          </div>
        </div>
        <!-- <div class="col-md-3">
          <div class="form-group">
            <label>Category</label>
            <div class="select-control select-control-large">
              <%#= f.select :category, [["Graphics & Design", "design"], ["Digital Marketing", "marketing"], ["Writing & Translation", "writing"],
              ["Music & Audio", "music"],["Programming & Tech", "tech"]], class:"form-control" %>
            </div>
          </div>
        </div> -->
      </div>

      <div class="form-group">
        <label>Pricing</label>
        <div class="select-control">
          <%= f.select :price, [['$20', '20'], ['$30', '30'], ['$40', '40'], ['$50', '50']], class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <label>Requirements</label>
        <%= f.text_area :requirements, rows: '5', class: "form-control"%>
      </div>
      <div class="form-group">
        <label>Upload Image</label>
          <%= f.file_field :image %>
      </div>
      <%= f.submit @product.new_record? ? "Add Product" : "Update Product", class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>
